<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/functionPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <ScrollView
            android:id="@+id/expressionScroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/expressionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:ellipsize="none"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="70sp" />
        </ScrollView>
    </LinearLayout>

    <View android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:background="#0084FF" />

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" >

        <ScrollView
            android:id="@+id/resultScroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/resultView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:ellipsize="none"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="120sp"/>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button7"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button8"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button9"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#01C5FF"
            android:text="@string/buttonDivide"
            android:onClick="handleOnClick"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button4"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button5"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button6"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#01C5FF"
            android:text="@string/buttonMultiply"
            android:onClick="handleOnClick"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button1"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button2"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0084FF"
            android:text="@string/button3"
            android:onClick="handleOnClick"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#01C5FF"
            android:text="@string/buttonSubtract"
            android:onClick="handleOnClick"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="25sp" >

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#0084FF"
                    android:text="@string/buttonDot"
                    android:onClick="handleOnClick"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#0084FF"
                    android:text="@string/button0"
                    android:onClick="handleOnClick"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#0084FF"
                    android:text="@string/buttonEquals"
                    android:onClick="handleOnClick"
                    android:textStyle="bold"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#01C5FF"
                    android:text="@string/buttonAdd"
                    android:onClick="handleOnClick"
                    android:textStyle="bold"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/buttonBackspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3B5998"
                    android:text="@string/buttonBackspace"
                    android:onClick="handleOnClick"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3B5998"
                    android:text="@string/buttonClear"
                    android:onClick="handleOnClick"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonCopy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3B5998"
                    android:text="@string/buttonCopy"
                    android:onClick="handleOnClick"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonUndo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3B5998"
                    android:text="@string/buttonUndo"
                    android:onClick="handleOnClick"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>